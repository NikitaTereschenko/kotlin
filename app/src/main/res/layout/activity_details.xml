<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <Button
        android:id="@+id/backhome"
        android:layout_width="94dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Назад"
        android:textColorLink="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Подробности"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemImages" />

    <androidx.cardview.widget.CardView
        android:id="@+id/itemImages"
        android:layout_width="340dp"
        android:layout_height="203dp"
        android:layout_marginTop="12dp"
        android:elevation="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemName">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="346dp"
            android:layout_height="204dp"
            android:scaleType="centerCrop"
            android:src="@color/teal_200" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Название"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="366dp"
        android:layout_height="332dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Самые лучшие ткани, самый приятный покрой, самая приятная цена. Мы заботимся о том, чтобы вы получили максимум удовольствия от наших вещей. Каждый товар упаковывается вручную, тщательно осматривается на качество и чистоту ткани и запаковывается в очень прочный и безопасный пакет.   \n Будьте уверены, вы получите невероятные эмоции от покупки. 100% хлопок, 100% качество, 100% заботы, 100% удовлетворенности. \n Успейте взять, пока в наличии достаточное количество товара."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details" />

</androidx.constraintlayout.widget.ConstraintLayout>